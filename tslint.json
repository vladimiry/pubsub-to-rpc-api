{
  "extends": "./node_modules/tslint/lib/configs/recommended",
  "rules": {
    "max-line-length": [
      true,
      140
    ],
    "prefer-for-of": true,
    "await-promise": true,
    "no-floating-promises": true,
    "no-empty-interface": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-access": false,
    "interface-name": false,
    "arrow-parens": [
      true
    ]
  }
}
